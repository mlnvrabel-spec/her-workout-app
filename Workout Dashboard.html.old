        ];

        /* 
        ========================================
        APP STATE & LOGIC
        ========================================
        */
        const App = {
            state: {
                currentDayIndex: 0,
                theme: 'dark',
                completed: {},
                timerInterval: null,
                timerSeconds: 0,
                touchStartX: 0,
                touchEndX: 0
            },

            init() {
                this.cacheDOM();
                this.bindEvents();
                this.renderDay(0);
                this.updateThemeUI();
            },

            cacheDOM() {
                this.dom = {
                    body: document.body,
                    themeBtn: document.getElementById('theme-btn'),
                    sunIcon: document.querySelector('.sun-icon'),
                    moonIcon: document.querySelector('.moon-icon'),
                    header: document.getElementById('main-header'),
                    titleWrapper: document.getElementById('title-wrapper'),
                    title: document.getElementById('page-title'),
                    subtitle: document.getElementById('page-subtitle'),
                    themeHero: document.getElementById('day-theme-hero'),
                    themeText: document.getElementById('theme-text'),
                    progressBar: document.getElementById('day-progress'),
                    progressFill: document.getElementById('progress-fill'),
                    container: document.getElementById('exercise-container'),
                    navItems: document.querySelectorAll('.nav-item'),
                    appContainer: document.getElementById('app-container'),
                    liquidBg: document.getElementById('liquid-bg'),
                    timerOverlay: document.getElementById('timer-overlay'),
                    timerDisplay: document.getElementById('timer-display'),
                    timerBtn: document.getElementById('timer-btn'),
                    confettiContainer: document.getElementById('confetti-container')
                };
            },

            bindEvents() {
                // Theme Toggle
                this.dom.themeBtn.addEventListener('click', () => this.toggleTheme());

                // Navigation
                this.dom.navItems.forEach(item => {
                    item.addEventListener('click', (e) => {
                        const target = parseInt(e.currentTarget.dataset.target);
                        this.changeDay(target);
                    });
                });

                // Timer Skip Button
                this.dom.timerBtn.addEventListener('click', () => this.stopTimer());

                // Timer Overlay Click (close on background click)
                this.dom.timerOverlay.addEventListener('click', (e) => {
                    if (e.target === this.dom.timerOverlay) this.stopTimer();
                });

                // Scroll Effects
                this.dom.appContainer.addEventListener('scroll', () => {
                    const scrollY = this.dom.appContainer.scrollTop;

                    if (scrollY > 10) {
                        this.dom.header.classList.add('scrolled');
                    } else {
                        this.dom.header.classList.remove('scrolled');
                    }

                    if (scrollY > 0) {
                        const scale = Math.max(0.75, 1 - (scrollY / 180));
                        const opacity = Math.max(0, 1 - (scrollY / 50));
                        this.dom.titleWrapper.style.transform = `scale(${scale}) translateY(${scrollY * -0.1}px)`;
                        this.dom.subtitle.style.opacity = opacity;
                    } else {
                        this.dom.titleWrapper.style.transform = `scale(1) translateY(0)`;
                        this.dom.subtitle.style.opacity = 1;
                    }
                });

                // Swipe Navigation
                this.dom.appContainer.addEventListener('touchstart', (e) => {
                    this.state.touchStartX = e.changedTouches[0].screenX;
                }, { passive: true });

                this.dom.appContainer.addEventListener('touchend', (e) => {
                    this.state.touchEndX = e.changedTouches[0].screenX;
                    this.handleSwipe();
                }, { passive: true });
            },

            handleSwipe() {
                const diff = this.state.touchStartX - this.state.touchEndX;
                const threshold = 80;

                if (Math.abs(diff) > threshold) {
                    if (diff > 0 && this.state.currentDayIndex < 3) {
                        // Swipe left - next day
                        this.changeDay(this.state.currentDayIndex + 1);
                    } else if (diff < 0 && this.state.currentDayIndex > 0) {
                        // Swipe right - previous day
                        this.changeDay(this.state.currentDayIndex - 1);
                    }
                }
            },

            toggleTheme() {
                if (navigator.vibrate) navigator.vibrate([40, 40, 40]);
                this.state.theme = this.state.theme === 'dark' ? 'light' : 'dark';
                this.dom.body.setAttribute('data-theme', this.state.theme);
                this.updateThemeUI();
            },

            updateThemeUI() {
                if (this.state.theme === 'dark') {
                    this.dom.sunIcon.style.display = 'block';
                    this.dom.moonIcon.style.display = 'none';
                } else {
                    this.dom.sunIcon.style.display = 'none';
                    this.dom.moonIcon.style.display = 'block';
                }
            },

            changeDay(index) {
                if (index === this.state.currentDayIndex) return;
                
                this.dom.navItems[this.state.currentDayIndex].classList.remove('active');
                this.dom.navItems[index].classList.add('active');
                
                this.state.currentDayIndex = index;
                
                this.dom.container.style.opacity = 0;
                this.dom.titleWrapper.style.opacity = 0;
                this.dom.themeHero.style.opacity = 0;
                
                setTimeout(() => {
                    this.renderDay(index);
                    this.dom.container.style.opacity = 1;
                    this.dom.titleWrapper.style.opacity = 1;
                    this.dom.themeHero.style.opacity = 1;
                    this.dom.appContainer.scrollTop = 0;
                }, 200);
            },

            renderDay(index) {
                const data = trainingData[index];
                
                // Apply Theme
                this.dom.body.className = '';
                this.dom.body.classList.add(data.theme);
                this.dom.body.setAttribute('data-theme', this.state.theme);

                // Update Header
                this.dom.title.textContent = data.title;
                this.dom.subtitle.textContent = data.subtitle;
                this.dom.themeText.textContent = data.focus;

                // Update Progress Bar
                this.updateProgress(data);

                // Build Cards
                let html = '';
                
                data.exercises.forEach((ex, i) => {
                    const id = `${data.id}-${i}`;
                    const isCompleted = this.state.completed[id];
                    const rirClass = ex.rir === "0" ? "intense" : "controlled";
                    const rirLabel = ex.rir === "0" ? "0 RIR" : `${ex.rir} RIR`;
                    
                    html += `
                        <div class="card ${isCompleted ? 'completed' : ''}" id="${id}" onclick="App.toggleCard(this)">
                            <div class="card-header">
                                <div class="exercise-order">${ex.order}</div>
                                <div class="exercise-info">
                                    <h3>${ex.name}</h3>
                                    <div class="meta-row">
                                        <span class="meta-pill accent">${ex.sets}</span>
                                        <span class="rir-chip ${rirClass}">${rirLabel}</span>
                                        <span class="rest-badge" onclick="App.startTimer(event, '${ex.rest}')">
                                            <svg viewBox="0 0 24 24"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
                                            ${ex.rest}
                                        </span>
                                    </div>
                                </div>
                                <div class="checkbox-wrapper" onclick="App.toggleComplete(event, '${id}')">
                                    <svg class="check-icon" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                                </div>
                            </div>
                            <div class="details-wrapper">
                                <div class="details-inner">
                                    <div class="glass-inner-panel">
                                        <span class="label-pill">Technique & Visualization</span>
                                        <p class="tip-text">
                                            <strong>Technique:</strong> ${ex.tech}<br><br>
                                            <strong>Visualization:</strong> ${ex.visual}
                                        </p>
                                    </div>
                                    <div class="glass-inner-panel mistake-panel">
                                        <span class="label-pill mistake-label">Mistakes to Avoid</span>
                                        <p class="tip-text">${ex.mistake}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                });

                this.dom.container.innerHTML = html;
            },

            updateProgress(data) {
                const total = data.exercises.length;
                let completed = 0;
                
                data.exercises.forEach((ex, i) => {
                    const id = `${data.id}-${i}`;
                    if (this.state.completed[id]) completed++;
                });

                const percent = (completed / total) * 100;
                this.dom.progressFill.style.width = `${percent}%`;

                if (percent === 100) {
                    this.dom.progressBar.classList.add('complete');
                } else {
                    this.dom.progressBar.classList.remove('complete');
                }
            },

            toggleCard(cardEl) {
                cardEl.classList.toggle('expanded');
            },

            toggleComplete(e, id) {
                e.stopPropagation();
                
                if (navigator.vibrate) navigator.vibrate(40);

                const card = document.getElementById(id);
                const data = trainingData[this.state.currentDayIndex];
                
                if (this.state.completed[id]) {
                    delete this.state.completed[id];
                    card.classList.remove('completed');
                } else {
                    this.state.completed[id] = true;
                    card.classList.add('completed');
                }

                this.updateProgress(data);
                this.checkCompletion(data);
            },

            checkCompletion(data) {
                const total = data.exercises.length;
                let completed = 0;
                
                data.exercises.forEach((ex, i) => {
                    const id = `${data.id}-${i}`;
                    if (this.state.completed[id]) completed++;
                });

                if (completed === total) {
                    this.celebrateCompletion();
                }
            },

            celebrateCompletion() {
                if (navigator.vibrate) navigator.vibrate([100, 50, 100, 50, 200]);
                
                const colors = ['#ff6b6b', '#4ecdc4', '#a18cd1', '#4facfe', '#ffd93d', '#6bcb77'];
                const container = this.dom.confettiContainer;
                
                for (let i = 0; i < 50; i++) {
                    const confetti = document.createElement('div');
                    confetti.classList.add('confetti');
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animationDuration = (Math.random() * 2 + 2) + 's';
                    confetti.style.animationDelay = Math.random() * 0.5 + 's';
                    container.appendChild(confetti);
                    
                    setTimeout(() => confetti.remove(), 4000);
                }
            },

            startTimer(e, restTime) {
                e.stopPropagation();

                // Parse rest time (e.g., "3m", "90s", "2m")
                let seconds = 0;
                if (restTime.includes('m')) {
                    seconds = parseInt(restTime) * 60;
                } else if (restTime.includes('s')) {
                    seconds = parseInt(restTime);
                }

                this.state.timerSeconds = seconds;
                this.updateTimerDisplay();
                this.dom.timerOverlay.classList.add('active');

                if (navigator.vibrate) navigator.vibrate(30);

                this.state.timerInterval = setInterval(() => {
                    this.state.timerSeconds--;
                    this.updateTimerDisplay();

                    if (this.state.timerSeconds <= 0) {
                        this.timerComplete();
                    }
                }, 1000);
            },

            updateTimerDisplay() {
                const mins = Math.floor(this.state.timerSeconds / 60);
                const secs = this.state.timerSeconds % 60;
                this.dom.timerDisplay.textContent = `${mins}:${secs.toString().padStart(2, '0')}`;
            },

            timerComplete() {
                this.stopTimer();
                if (navigator.vibrate) navigator.vibrate([200, 100, 200, 100, 200]);
            },

            stopTimer() {
                clearInterval(this.state.timerInterval);
                this.dom.timerOverlay.classList.remove('active');
            }
        };

        // Initialize App
        document.addEventListener('DOMContentLoaded', () => {
            App.init();
        });

    </script>
